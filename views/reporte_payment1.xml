<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_payment1">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="1"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <div style="font-size: 110%; position: absolute; top: 1.8cm; left: 3.8cm">
                        GUATEMALA, <span t-field="o.date"/>
                    </div>
                    <div style="font-size: 110%; position: absolute; top: 1.8cm; left: 17.7cm">
                        <span t-esc="'{0:,.2f}'.format(o.amount)"/>
                    </div>
                    <div style="font-size: 95%; position: absolute; top: 2.8cm; left: 4.0cm; width: 18.5cm">
                        <span t-esc="o.nombre_impreso or o.partner_id.name"/>
                    </div>
                    <div style="font-size: 95%; text-transform: uppercase; position: absolute; top: 3.8cm; left: 2.5cm; width: 20cm">
                        <span t-esc="a_letras(o.amount)"/>
                    </div>
                    <div style="font-size: 95%; position: absolute; top: 5.0cm; left: 4cm; width: 15cm">
                        <span t-field="o.ref"/>
                    </div>

                    <div t-if="o.no_negociable == True" style="font-size: 110%; position: absolute; top: 4.5cm; left: 3cm; width: 5cm">
                     "NO NEGOCIABLE"
                    </div>

                    <div style="position: absolute; top: 6.0cm; left: 4.6cm; width: 15cm">
                        <span t-field="o.name"/>
                    </div>
                    <div style="position: absolute; top: 6.0cm; left: 10cm; width: 15cm">
                        <span t-field="o.user_id.name"/>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
